{% extends 'base.html.twig' %}
{% block body %}

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.language) }}
    <ul class="list-group list-group-flush translations"
        data-index="{{ form.translations|length > 0 ? form.translations|last.vars.name + 1 : 0 }}"
        data-prototype="{{ form_widget(form.translations.vars.prototype)|e('html_attr') }}">
    </ul>
    <button type="button" class="add_item_link" data-collection-holder-class="translations">Add a flash card</button>

    {{ form_end(form) }}
{% endblock %}